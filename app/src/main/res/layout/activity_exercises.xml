<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/piano_background3"
    tools:context=".ExercisesActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ex1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/exercise_1"
            android:onClick="goToAnActivity"
            android:text="Exercise 1"
            android:textColor="#3e2723" />

        <Button
            android:id="@+id/ex2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/exercise_1"
            android:text="Exercise 2"
            android:textColor="#3e2723" />


        <Button
            android:id="@+id/ex3"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/exercise_1"
            android:text="Exercise 3"
            android:textColor="#3e2723" />


        <Button
            android:id="@+id/ex4"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/exercise_1"
            android:text="Exercise 4"
            android:textColor="#3e2723" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Try one of these exercises."
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="italic" />


</RelativeLayout>


